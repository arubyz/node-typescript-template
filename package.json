{
    "name": "node-typescript-template",
    "version": "0.0.1",
    "type": "module",
    "license": "MIT",
    "engines": {
        "node": ">=18.14.0"
    },
    "description": "Template project for a NodeJS service using TypeScript",
    "main": "src/main.ts",
    "scripts": {
        "run:js": "node --no-warnings --experimental-json-modules",
        "run:ts": "node --no-warnings --experimental-json-modules --loader ts-node/esm",
        "run:script": "yarn --silent run:ts scripts/lib/run-script.js",
        "dev": "node --no-warnings --experimental-json-modules --loader ts-node/esm src/main.ts",
        "start": "yarn --silent run:js out/src/main.js"
    },
    "dependencies": {
    },
    "devDependencies": {
        "@swc/core": "^1.3.29",
        "@types/fs-extra": "^11.0.1",
        "@types/node": "^18.11.18",
        "chalk": "^5.2.0",
        "execa": "^7.1.1",
        "fs-extra": "^11.1.1",
        "prettier": "^2.8.3",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.4"
    }
}
